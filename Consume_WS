            <asp:TextBox ID="myNum" runat="server"></asp:TextBox>
            <asp:Button ID="btn" Text="Check" runat="server" OnClick="myFuction" />
        </div>
        <asp:Label Id="myLabel" Text="Result will appear here..." runat="server" />
    </form>
